<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="?attr/noraBackgroundColor"
	android:padding="8dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="GatewayCallsign:"
				android:textSize="18sp"
				android:textColor="?attr/noraTextColor" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<EditText
					android:id="@+id/editTextGatewayCallsign"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:ems="10"
					android:inputType="text|textCapCharacters|textNoSuggestions" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="2"
					android:text="G"
					android:textSize="24sp"
					android:layout_marginLeft="10dp" />
			</LinearLayout>

			<LinearLayout
				android:layout_marginTop="10dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<Switch
					android:id="@+id/switchUseProxyGateway"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:text="UseProxyGateway"
					android:textAlignment="textEnd"
					android:textSize="18sp"
					android:textColor="?attr/noraTextColor" />

			</LinearLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="20dp"
				android:orientation="horizontal">

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="ProxyGatewayAddress:"
						android:textSize="14sp"
						android:textColor="?attr/noraTextColor" />

					<EditText
						android:id="@+id/editTextProxyGatewayAddress"
						android:layout_width="200dp"
						android:layout_height="wrap_content"
						android:inputType="text|textNoSuggestions"
						/>

				</LinearLayout>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="10dp"
						android:text="Port:"
						android:textSize="14sp"
						android:textColor="?attr/noraTextColor" />

					<EditText
						android:id="@+id/editTextProxyGatewayPort"
						android:layout_width="80dp"
						android:layout_height="wrap_content"
						android:layout_marginStart="10dp"
						android:digits="0123456789"
						android:inputType="number|numberDecimal" />

				</LinearLayout>



			</LinearLayout>


		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginBottom="5dp"
			android:layout_marginTop="5dp"
			android:background="@android:color/darker_gray" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="RoutingServices:"
				android:textSize="18sp"
				android:textColor="?attr/noraTextColor" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="10dp"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<Switch
						android:id="@+id/switchRoutingServiceJapanTrust"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" />

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dp"
						android:layout_marginRight="10dp"
						android:text="JapanTrust"
						android:textAlignment="textEnd"
						android:textSize="18sp"
						android:textColor="?attr/noraTextColor" />

				</LinearLayout>


				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginStart="20dp"
					android:layout_marginEnd="20dp"
					android:layout_weight="1"
					android:orientation="vertical">

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="ServerAddress:"
						android:textSize="14sp"
						android:textColor="?attr/noraTextColor" />

					<EditText
						android:id="@+id/editTextRoutingServiceJapanTrustServerAddress"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:ems="10"
						android:inputType="text|textNoSuggestions" />

				</LinearLayout>

				<LinearLayout
                    android:layout_marginTop="20dp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<Switch
						android:id="@+id/switchRoutingServiceIrcDDB"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:enabled="false" />

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dp"
						android:layout_marginRight="10dp"
						android:text="ircDDB"
						android:textAlignment="textEnd"
						android:textSize="18sp"
						android:textColor="?attr/noraTextColor" />

				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginStart="20dp"
					android:layout_marginEnd="20dp"
					android:orientation="vertical">

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="ServerAddress:"
						android:textSize="14sp"
						android:textColor="?attr/noraTextColor" />

					<EditText
						android:id="@+id/editTextRoutingServiceIrcDDBServerAddress"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:ems="10"
						android:enabled="false"
						android:inputType="text|textNoSuggestions" />

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">
<!--
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_weight="1"
							android:layout_height="wrap_content"
							android:orientation="vertical"
							android:layout_marginRight="10dp">

							<TextView
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:text="UserName:"
								android:textSize="14sp"
								android:textColor="?attr/noraTextColor" />

							<EditText
								android:id="@+id/editTextRoutingServiceIrcDDBUserName"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:ems="10"
								android:enabled="false"
								android:inputType="text|textNoSuggestions" />

						</LinearLayout>
-->
						<LinearLayout
							android:layout_width="match_parent"
							android:layout_weight="1"
							android:layout_height="wrap_content"
							android:orientation="vertical"
							android:layout_marginRight="10dp">
						</LinearLayout>

						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:orientation="vertical"
							android:layout_marginLeft="10dp">

							<TextView
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:text="Password:"
								android:textSize="14sp"
								android:textColor="?attr/noraTextColor" />

							<EditText
								android:id="@+id/editTextRoutingServiceIrcDDBPassword"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:ems="10"
								android:enabled="false"
								android:inputType="textNoSuggestions|textPassword" />

						</LinearLayout>

					</LinearLayout>
<!--
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<Space
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:layout_weight="1" />

						<CheckBox
							android:id="@+id/checkBoxRoutingServiceIrcDDBAnonymous"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:enabled="false"
							android:text="Anonymous" />

					</LinearLayout>
-->

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginBottom="5dp"
			android:layout_marginTop="5dp"
			android:background="@android:color/darker_gray" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="ReflectorProtocols:"
				android:textSize="18sp"
				android:textColor="?attr/noraTextColor" />

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				>

				<Switch
					android:id="@+id/checkBoxReflectorProtocolDExtra"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingStart="0dp"
				/>

				<TextView
					android:id="@+id/textViewReflectorProtocolDExtra"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingStart="5dp"
					android:layout_toEndOf="@id/checkBoxReflectorProtocolDExtra"
					android:layout_alignBaseline="@id/checkBoxReflectorProtocolDExtra"
					android:text="DExtra"
					android:textColor="?attr/noraTextColor" />

				<Switch
					android:id="@+id/checkBoxReflectorProtocolDPlus"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingStart="70dp"
					android:layout_toEndOf="@id/textViewReflectorProtocolDExtra"
					android:layout_alignBaseline="@id/checkBoxReflectorProtocolDExtra"
				/>

				<TextView
					android:id="@+id/textViewReflectorProtocolDPlus"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingStart="10dp"
					android:layout_toEndOf="@id/checkBoxReflectorProtocolDPlus"
					android:layout_alignBaseline="@id/checkBoxReflectorProtocolDExtra"
					android:text="DPlus"
					android:textColor="?attr/noraTextColor" />



				<Switch
					android:id="@+id/checkBoxReflectorProtocolDCS"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/checkBoxReflectorProtocolDExtra"
				/>

				<TextView
					android:id="@+id/textViewReflectorProtocolDCS"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingStart="5dp"
					android:layout_toEndOf="@id/checkBoxReflectorProtocolDCS"
					android:layout_alignBaseline="@id/checkBoxReflectorProtocolDCS"
					android:text="DCS"
					android:textColor="?attr/noraTextColor" />

				<Switch
					android:id="@+id/checkBoxReflectorProtocolJARLMultiForward"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingStart="50dp"
					android:layout_toEndOf="@+id/textViewReflectorProtocolDCS"
					android:layout_alignBaseline="@id/checkBoxReflectorProtocolDCS"
				/>

				<TextView
					android:id="@+id/textViewReflectorProtocolJARLMultiForward"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingStart="5dp"
					android:layout_toEndOf="@id/checkBoxReflectorProtocolJARLMultiForward"
					android:layout_alignBaseline="@id/checkBoxReflectorProtocolDCS"
					android:text="JARL MultiForward Link"
					android:textColor="?attr/noraTextColor" />

			</RelativeLayout>

		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginBottom="5dp"
			android:layout_marginTop="5dp"
			android:background="@android:color/darker_gray" />

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Misc:"
			android:textSize="18sp"
			android:textColor="?attr/noraTextColor" />

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>

			<Switch
				android:id="@+id/checkBoxRemoteControlEnable"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignTop="@+id/textViewGatewayConfigRemoteControl"
				android:layout_alignBottom="@+id/textViewGatewayConfigRemoteControl"
				android:gravity="center_vertical"
				android:textColor="?attr/noraTextColor"/>

			<TextView
				android:id="@+id/textViewGatewayConfigRemoteControl"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toEndOf="@+id/checkBoxRemoteControlEnable"
				android:text="Remote Control\n(Port:62115/Pass:NoraRemotePass)"
				/>
		</RelativeLayout>

	</LinearLayout>

</ScrollView>
