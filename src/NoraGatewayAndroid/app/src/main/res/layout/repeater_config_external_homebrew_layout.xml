<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/noraBackgroundColor"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RemoteRepeaterAddress"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextRepeaterConfigExternalHomebrewRemoteRepeaterAddress"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RemoteRepeaterPort"
        android:textSize="18sp"
        android:textColor="?attr/noraTextColor" />

    <EditText
        android:id="@+id/editTextRepeaterConfigExternalHomebrewRemoteRepeaterPort"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text|numberDecimal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LocalPort"
        android:textSize="18sp"
        android:textColor="?attr/noraTextColor" />

    <EditText
        android:id="@+id/editTextRepeaterConfigExternalHomebrewLocalPort"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text|numberDecimal" />

</LinearLayout>
